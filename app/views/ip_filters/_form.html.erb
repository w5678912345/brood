<%= form_for(@ip_filter,:html=>{:class=>"form-horizontal"}) do |f|  %>
<div class="control-group">
<div>例子：112\.112\..*</div>
<label class="control-label">规则:</label>
<div class="controls docs-input-sizes" >
  <%= f.text_field :regex,:required=>"required"  %>
</div>
</div>
<div class="control-group">
<label class="control-label">生效:</label>
<div class="controls docs-input-sizes" >
  <%= f.check_box :enabled,:required=>"required",:default => true %>
</div>
</div>

<div class="control-group">
<label class="control-label">拒绝:</label>
<div class="controls docs-input-sizes" >
  <%= f.check_box :reverse  %>
</div>
</div>

<div class="control-group">
<div class="controls">
  <%= f.submit "保存", :class => "btn btn-success"%>
</div>
</div>
<%end%>


<script type="text/javascript">
/**/
$(function(){
$("form[id=edit_ip_filter_<%= @ip_filter.id %>]").validate();
$("form[id=new_ip_filter]").validate();
});
</script>
