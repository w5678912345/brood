<%= render :partial => "/common/date_range_form",:locals=>{:path=>old_chart_data_nodes_path }%>


<hr/>
<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

<script type="text/javascript">
$(function () {
$('#container').highcharts({
    chart: {
        type: 'area'
    },
    title: {
        text: '账号数量',
        x: -20 //center
    },
    subtitle: {
        text: 'account status',
        x: -20
    },
    xAxis: {
        categories: <%= raw(@days.to_json) %>,
        tickmarkPlacement: 'on',
        title: {
            enabled: false
        }
    },
    yAxis: {
        title: {
            text: '数量 (个)'
        },
    },
    plotOptions: {
        area: {
            stacking: 'normal',
            lineColor: '#666666',
            lineWidth: 1,
            marker: {
                lineWidth: 1,
                lineColor: '#666666'
            }
        }
    },
    tooltip: {
        shared: true,
        valueSuffix: '个'
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle',
        borderWidth: 0
    },
    series: <%= raw(@d.to_json) %>
});
});


</script>