<div class="alert">
<strong>提示信息:</strong>
<span>共<%= @payments.total_entries%>条支出记录,合计支出:<%= @payments.sum(:gold)%></span> 
</div>
<table class="table table-bordered table-condensed">
<thead>
<tr>
	<th>ID</th>
	<th>角色</th>
	<th>支出金额</th>
	<th>当前余额</th>
	<th>累计产出</th>
	<th>时间</th>
	<th>备注</th>
	<th>方式</th>
<tr>
</thead>
<tbody>
<% @payments.each do |payment|%>
	<tr>
		<td><%= payment.id %></td>
		<td><%= payment.role.account  if payment.role %></td>
		<td><%= payment.gold %></td>
		<td><%= payment.balance %></td>
		<td><%= payment.total %></td>
		<td><%= time_str payment.created_at  %></td>
		<td><%= payment.remark %></td>
		<td><%= payment.pay_type %></td>
	</tr>
<%end%>
</tbody>
</table>
