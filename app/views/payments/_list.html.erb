<div class="alert">
<strong>提示信息:</strong>
<button type="button" class="close" data-dismiss="alert">&times;</button>
<span>共<%= @payments.total_entries%>条支出记录,合计支出:<%= @payments.sum(:gold)%></span> 
</div>
<table class="table table-bordered table-condensed">
<thead>
<tr>
	<th>时间</th>
	<th>角色</th>
	<th>支出金额</th>
	<th>当前余额</th>
	<th>当前产出</th>
	<th>备注</th>
	<th>类型</th>
</tr>
</thead>
<tbody>
<% @payments.each do |payment|%>
	<tr>
		<td><%= payment.id %>#<%= time_str payment.created_at  %></td>
		<td><%= link_to "#{payment.role.account}##{payment.role.role_index}",payments_role_path(payment.role)  if payment.role %></td>
		<td><%= payment.gold %></td>
		<td><%= payment.balance %></td>
		<td><%= payment.total %></td>
		<td><%= payment.remark %></td>
		<td><%= link_to payment.pay_type,payments_path(:type=>payment.pay_type) %></td>
	</tr>
<%end%>
</tbody>
</table>
<%= will_paginate @payments %>