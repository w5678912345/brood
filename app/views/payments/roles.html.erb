<%= render "navbar" %>
<fieldset>
<legend>角色支出合计</legend>
<table class="table table-bordered table-condensed">
<thead>
<tr>
	<th>角色ID</th>
	<th>角色</th>
	<th>服务器</th>
	<th>角色等级</th>
	<th>金币余额</th>
	<th>支出合计</th>
	<th>产出累计</th>
<tr>
</thead>
<tbody>
<% @payments.each do |payment|%>
	<tr>
		<td><%= payment.role.id %></td>
		<td><%= link_to "#{payment.role.account}##{payment.role.role_index}",payments_role_path(payment.role)  if payment.role %></td>
		<td><%= payment.role.server %></td>
		<td><%= payment.role.level %></td>
		<td><%= payment.role.gold %></td>
		<td><%= payment.sum_gold.to_i %></td>
		<td><%= payment.role.total %></td>
	</tr>
<%end%>
</tbody>
</table>
</fieldset>
