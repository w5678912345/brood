<form class="form-search" action="<%= payments_path %>">
	时间:
  <input type="text" name="start_time" id="start_time" class="input-medium" placeholder="开始时间" value="<%= params[:start_time]%>" />-
  <input type="text" name="end_time" id="end_time" class="input-medium" placeholder="截止时间" value="<%= params[:end_time]%>" />  
	支出:
  <input type="text" name="min_gold" class="input-small" placeholder="最小金额" value="<%= params[:min_gold]%>" />-
  <input type="text" name="max_gold" class="input-small" placeholder="最大金额" value="<%= params[:max_gold]%>" />
  <input type="text" name="server" class="input-small" placeholder="类型" value="<%= params[:server]%>" />
  <input type="text" name="pay_type" class="input-small" placeholder="类型" value="<%= params[:pay_type]%>" />
	<input type="text" name="remark" class="input-small" placeholder="备注" value="<%= params[:remark]%>" />
	<input type="text" name="role_id" class="input-small" placeholder="角色ID" value="<%= params[:role_id]%>" />
  <button type="submit" class="btn">Search</button>
</form>
<script type="text/javascript">
$(function(){
  $("#start_time").datetimepicker({dateFormat:"yy-mm-dd",timeFormat:"HH:mm:ss"});
  $("#end_time").datetimepicker({dateFormat:"yy-mm-dd",timeFormat:"HH:mm:ss"});
});
</script>
