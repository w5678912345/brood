<% content_for :title do%>账号列表<%end%>
<%= render "ul" %>
<%= render "search_form" %>
<div class="alert">
	<strong>提示信息:</strong>
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<span><%= @accounts.count %>条记录  <%= flash[:msg] if flash[:msg]%></span> 
</div>
<%= form_tag(checked_accounts_path,:method => :post,:id=>"account_checked_form",:onSubmit=>"",:target=>"_blank") do -%>

	<div class="text-right">
		<select id="url" class="">
		<option value="">--请选择--</option>
		<option value="<%= edit_enabled_expand_accounts_path %>">修改Enabled</option>
		<option value="<%= edit_in_cpo_expand_accounts_path %>">导入到CPO</option>
		</select>
		<button type="button" class="btn btn-danger" id="expand-btn">确定操作</button>
		<select id="do" name="do" class="input-medium">
		<option value="">选择操作</option>
		<% Account::Btns.each do | key, value |  %>
			<option value="<%= key %>"><%= value%></option>
		<%end%>
		</select>
		<button type="submit" class="btn btn-primary">执行操作</button>
	</div>
	<%= render :partial => "grid",:locals=>{:accounts=>@accounts}%>
<%end%>

<script type="text/javascript">


	$("#expand-btn").click(function(){
		var url = $("#url").val();
		if(url.length == 0){
			return false;
		}
		$("#account_checked_form").attr("action",url);
		$("#account_checked_form").submit();
	});
</script>