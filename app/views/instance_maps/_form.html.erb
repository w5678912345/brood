<%= semantic_form_for @instance_map do |f| %>
  <%= f.inputs do %>
    <%= f.input :key %>
    <%= f.input :name %>
    <%= f.input :profession %>
    <%= f.input :min_level %>
    <%= f.input :max_level %>
    <%= f.input :gold %>
    <%= f.input :safety_limit %>
    <%= f.input :death_limit %>
    <%= f.input :enter_count %>
    <%= f.input :ishell %>
    <%= f.input :client_manual %>
    <%= f.input :enabled %>

    <%= f.input :remark %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
