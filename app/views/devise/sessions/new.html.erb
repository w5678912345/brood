<fieldset>
<legend>登录</legend>
<%= form_for(resource, :as => resource_name, :url => new_user_session_path(),:class=>"form-horizontal") do |f| %>
<div class="control-group">
  <label class="control-label" for="inputEmail">邮 箱：</label>
  <div class="controls">
		<%= f.email_field :email, :autofocus => true,:placeholder=>"Email" %>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="inputEmail">密 码：</label>
  <div class="controls">
		<%= f.password_field :password,:placeholder=>"Password" %>
  </div>
</div>


<% if devise_mapping.rememberable? -%>
<label class="checkbox">
  <%= f.check_box :remember_me %> 记住登录
</label>
<% end -%>

<div><%= f.submit "登 录",:class=>"btn btn-primary" %></div>
<% end %>
</fieldset>