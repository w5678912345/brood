<%= render "navbar" %>
<fieldset>
<legend>计算机分布</legend>
<form class="form-search" action="<%= group_count_computers_path %>">
统计条件:<select name="col">
	
<% @cols.each do |k,v| %>
<option value="<%= k%>" <%= 'selected="selected"' if k == @col %>><%= v %></option>
<%end%>
</select>
<button type="submit" class="btn">确定</button>
</form>
<table class="table table-bordered table-condensed">
<thead>
<tr>
<th>机器数量</th>
<th><%= @cols[@col]%></th>
</tr>
</thead>
<tbody>
<% @records.each do |record|%>
<tr>
<td><%= record.computers_count %></td>
<td><%= record.col.blank? ? "" : link_to(record.col,computers_path(@col=>record.col)) %></td>

</tr>
<%end%>
</tbody>
</table>
</fieldset>