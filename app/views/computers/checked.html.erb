<% content_for :title do%>机器 <%= Computer::Btns[@do]%><%end%>
<fieldset>
<legend>机器： <%= Computer::Btns[@do]%></legend>
<div class="alert">
<strong>提示信息:</strong>
<span>您选中了<%= @ids.length %> 个机器，执行[<%= Computer::Btns[@do]%>]操作!</span> 
</div>

<%= form_tag(do_checked_computers_path,:method => :put,:id=>"computer_checked_form",:class=>"form-horizontal") do -%>
<%= hidden_field_tag :do,params[:do]%>
<select name="ids[]" multiple="multiple" style="display:none;">
<% @ids.each do |id|%>
<option value="<%= id%>" selected="selected"><%= id %></option>
<%end%>
</select>



<!-- define form  -->
<% if @do == "bind_accounts"%>
<div class="control-group">
<label class="control-label">账号状态:</label>
<div class="controls docs-input-sizes" >
	<select name="status" class="input-medium"  >
	<option value="">---不限---</option>
	<% Account::STATUS.keys.each do |status|%>
	<option value="<%= status%>" ><%= status %></option>
	<%end%>
	</select>
</div>
</div>
<div class="control-group">
	<label class="control-label">平均分配:</label>
	<div class="controls docs-input-sizes" >
		<input type="text" value="1" name="avg" />个
	</div>
</div>
<% elsif @do == "task" %>
	<div class="control-group">
		<label class="control-label">任务名称:</label>
		<div class="controls docs-input-sizes" >
		<select name="task_id">
		<% @tasks.each do |task|%>
		<option value="<%= task.id%>"><%= task.name %></option>
		<%end%>
		</select>
		</div>
	</div>
<% elsif @do == "clear_bind_accounts"%>
	<div class="control-group">
		<label class="control-label">状态</label>
		<div class="controls docs-input-sizes" >
		<select name="bind">
			<option value="-1">禁用绑定</option>
			<option value="0">未绑定</option>
		</select>
		</div>
	</div>
	<div class="control-group">
	<label class="control-label">解绑个数:</label>
	<div class="controls docs-input-sizes" >
		<input type="text" value="" name="count"  />个
	</div>
</div>
<% elsif @do == "auto_binding_account"%>
<div class="control-group">
<label class="control-label">请选择:</label>
<div class="controls docs-input-sizes">
	<label class="checkbox">
	<input id="auto_binding" name="auto_binding" type="checkbox" value="1">自动绑定账号
</label>
</div>
</div>
<% elsif @do == "set_group"%>
<div class="control-group">
	<label class="control-label">设置分组:</label>
	<div class="controls docs-input-sizes" >
		<input type="text" value="tmp" name="group" />
	</div>
</div>
<% elsif @do == "set_status"%>
<div class="control-group">
	<label class="control-label">设置状态:</label>
	<div class="controls docs-input-sizes" >
	<label class="checkbox">
		<input type="checkbox" value="1" name="status" checked="checked" />机器可用
	</label>
	</div>
</div>
<%end%>


<div class="form-actions">
  <%= submit_tag "确认执行", :class => "btn btn-primary"%>
</div>


<%end%>

</fieldset>