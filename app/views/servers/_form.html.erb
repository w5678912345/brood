<% if @server.errors.any?%>
<div class="alert alert-error">
<strong>提示信息:</strong>
<button type="button" class="close" data-dismiss="alert">×</button>
<span><%= @server.errors.full_messages %></span> 
</div>
<%end%>

<%= form_for(@server,:html=>{:class=>"form-horizontal"}) do |f|  %>
<div class="control-group">
<label class="control-label">名称:</label>
<div class="controls">
	<%= f.text_field :name,:required=>"required"  %>
</div>
</div>

<div class="control-group">
<label class="control-label">TAGS:</label>
<div class="controls">
	<%= f.text_field :group_list  %>
</div>
</div>

<div class="control-group">
<label class="control-label">100万金币/点卷:</label>
<div class="controls">
	<%= f.text_field :point,:required=>"required"  %>
</div>
</div>

<div class="control-group">
<label class="control-label">出售商品:</label>
<div class="controls">
	<%= f.text_field :goods,:required=>"required"  %>
</div>
</div>

<div class="control-group">
<label class="control-label">商品单价:</label>
<div class="controls">
	<%= f.text_field :price,:required=>"required"  %>
</div>
</div>

<div class="control-group">
<label class="control-label">金币单价:</label>
<div class="controls">
	<div class="input-append">
	<%= f.text_field :gold_price,:required=>"required",:class=>"input-small"  %>
  <span class="add-on">元/万金币</span>
</div>
</div>
</div>

<div class="control-group">
<label class="control-label">开启转账:</label>
<div class="controls">
	<%= f.select :enable_transfer_gold,[true,false]%>
</div>
</div>



<!-- <div class="control-group">
<label class="control-label">收款角色:</label>
<div class="controls docs-input-sizes" >
	
</div>
</div> -->

<div class="control-group">
<label class="control-label">收款角色:</label>
<div class="controls docs-input-sizes" id="options">
  

<span class="text-warning">(可以指定多个)</span>
<input type="button" onclick="addOption();" value="添加+" class="btn">

<ol style="" id="roles-list">

 <% if @server.roles.any? %>
	 <% @server.roles.each do |role|%>
	 <li class="div_option">
		<input type="text" name="roles[]" class="input-xlarge" value="<%= role %>">
	 	<a href="#" onclick="delOption(this);">删除</a>
	</li>
	 <%end%>	
 <% end %>

</ol>
</div>
</div>

<div class="control-group">
<div class="controls">
	<%= f.submit "保存", :class => "btn btn-success"%>
</div>
</div>


<%end%>

<textarea id="txt" style="display:none;" >
 <li class="div_option">
	<input type="text" name="roles[]" class="input-xlarge" />
	 <a href="#" onclick="delOption(this);">删除</a>
</li>
</textarea>


<script type="text/javascript">
/**/
$(function(){
$("form[id = edit_computer_<%= @server.id %>]").validate();
$("form[id = new_server]").validate();
});

function addOption(){
  var html = $("#txt").text();
  $("#roles-list").append(html);
}
/*删除选项*/
function delOption(a){
  $(a).parent().remove();
}
</script>
