<%= render "navbar"%>


<fieldset>
<legend>金币产出统计</legend>
<table class="table table-bordered">
<tr>
	<td class="span2">产出角色：</td>
	<td><%= link_to Role.where("total > 0").count,outputs_path %></td>
</tr>
<tr>
	<td>产出总量：</td>
	<td><%= link_to Role.where("total > 0").sum(:total),outputs_path %></td>
</tr>

<tr>
	<td>背包余额：</td>
	<td><%= Role.where("total > 0").sum(:gold) %></td>
</tr>

<tr>
	<td>支出合计：</td>
	<td><%= @sum_gold %></td>
</tr>



</table>
</fieldset>

<fieldset>
<legend>金币支出统计</legend>
<table class="table table-bordered">
<thead>
	<tr>
		<th>支出类型</th>
		<th>支出金币</th>
	</tr>
</thead>
<% @payments.each do |pm|%>
<tr>
	<td><%= link_to pm.pay_type,search_payments_path(:pay_type=>pm.pay_type) %></td>
	<td><%= pm.zhichu.to_i %></td>
</tr>
<% end %>
<tr>
	<td colspan="2">合计：<%= @sum_gold%></td>
</tr>
</table>
</fieldset>

