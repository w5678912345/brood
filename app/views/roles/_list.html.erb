<div class="alert">
<strong>提示信息:</strong>
<span>共<%= @roles.total_entries%>个Role</span> 
</div>
<table class="table table-bordered table-condensed">
<thead>
	<th>ID</th>
	<th>Account</th>
	<th>Role Index</th>
	<th>Server</th>
	<th>Level</th>
	<th>Vit Power</th>
  <th>Gold</th>
	<th>Online</th>
	<th>Operate</th>
</thead>
<tbody>
<% @roles.each do |role| %>
<tr <%= "class=error title=#{role.close_hours}" if role.close %>>
<td><%= role.id %></td>
<td><%= link_to  role.account,role_path(role) %></td>
<td><%= role.role_index %></td>
<td><%= role.server%></td>
<td><%= role.level%></td>
<td><%= role.vit_power %></td>
<td><%= role.gold %></td>
<td>
<% if role.online %>
<%= link_to role.computer.hostname , computer_path(role.computer) if role.computer %>#<%= link_to role.ip,roles_ip_path(role.ip.gsub(".","_")) %>
<%else%>
No
<%end%>
</td>
<td>
<div class="btn-group">
    <%= link_to "查看", role_path(role),:class=>"btn" %>
    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li>
          <%= link_to raw("<i class='icon-edit'></i>修改"),edit_role_path(role) %>
      </li>
      <li>
         <%= link_to raw("<i class='icon-trash'></i>删除"),role_path(role),confirm: 'Are you sure?',:method => :delete %>
      </li>
    </ul>
  </div>
</td>
</tr>
<%end%>
</tbody>
</table>


<% if @page_params %>
<%= will_paginate @roles, :params => @page_params %>
<%else%>
<%= will_paginate @roles %>
<%end %>