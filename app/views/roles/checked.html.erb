<fieldset>
<legend>角色 <%= Role::Btns[@do]%></legend>
<div class="alert">
<strong>提示信息:</strong>
<span>您选中了<%= @ids.length %> 个角色，执行[<%= Role::Btns[@do]%>]操作!</span> 
</div>

<%= form_tag(do_checked_roles_path,:method => :put,:id=>"computer_checked_form",:class=>"form-horizontal") do -%>
<%= hidden_field_tag :do,params[:do]%>
<select name="ids[]" multiple="multiple" style="display:none;">
<% @ids.each do |id|%>
<option value="<%= id%>" selected="selected"><%= id %></option>
<%end%>
</select>
<!-- -->
<% if @do == "set_status"%>
<div class="control-group">
<label class="control-label">角色状态:</label>
<div class="controls docs-input-sizes" >
	<%= select_tag "status",options_for_select(Role::STATUS )%>
</div>
</div>
<%end%>


<div class="form-actions">
  <%= submit_tag "确认执行", :class => "btn btn-primary"%>
</div>


<%end%>

</fieldset>