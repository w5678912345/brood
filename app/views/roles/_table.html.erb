<table class="table table-bordered table-condensed">
<thead>
<tr>
	<th>ID</th>
	<th>Index</th>
	<th>账户</th>
	<th>服务器</th>
	<th>等级</th>
	<th>疲劳值</th>
  	<th>金币</th>
	<th>在线</th>
	<th>状态</th>
	<th>操作</th>
</tr>
</thead>
<tbody>
<% roles.each do |role| %>
<tr>
<td>
<label class="checkbox">
<%= check_box_tag 'ids[]',role.id,false,:id=>role.id %>
<%= role_tag role.id %>
</label>
</td>
<td><%= role.role_index %></td>
<td><%= account_tag role.account%></td>
<td><%= role.server%></td>
<td><%= role.level%></td>
<td><%= role.vit_power %></td>
<td><%= role.gold %></td>
<td><%= role.qq_account.online_role_id == role.id ? "Yes" : "" %></td>
<td><%= role.status %></td>
<td>#</td>
</tr>
<%end%>
</tbody>
</table>