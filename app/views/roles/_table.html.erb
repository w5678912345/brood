<table class="table table-bordered table-condensed">
<thead>
<tr>
	<th>ID</th>
	<th>Index</th>
	<th>账户</th>
	<th>服务器</th>
	<th>等级</th>
	<th>疲劳值</th>
  	<th>金币</th>
	<th>在线</th>
	<th>状态</th>
	<th>操作</th>
</tr>
</thead>
<tbody>
<% roles.each do |role| %>
<tr>
<td>
<label class="checkbox">
<%= check_box_tag 'ids[]',role.id,false,:id=>role.id %>
<%= role.id %>
</label>
</td>
<td><%= link_to role.id, role_path(role.id) %> <%= role.role_index %></td>
<td><%= link_to "#{role.account}",account_path(role.account),:target => "_blank" %>
</td>

<td><%= role.server%></td>
<td><%= role.level%></td>
<td><%= role.vit_power %></td>
<td><%= role.gold %></td>
<td>
<% if role.is_online? %>
<%= role.computer_id %>
<%= link_to role.computer.hostname , computer_path(role.computer) if role.computer %>
<%else%>
No<%= "(Waiting...)" if role.can_online%>
<%end%>
</td>
<td>
<%= role.status %>
</td>
<td>
<%= link_to "查看记录",notes_path(:role_id => role.id ),:target=>"_blank"%>
</td>
</tr>
<%end%>
</tbody>
</table>