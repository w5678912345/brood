$("#account_level_selector" ).slider({animate: true,max: 200,min:0,step:1,
    value: <%= @role.level %>,
    change: function(){
    	var value = $(this).slider("value");
    	$("#role_level_display").text(value);
    	$("#role_level").val(value);
    }
  });
});
/**/


</script>