<%= render "navbar2" %>

<table class="table">
<tbody>
<tr>
<td>ID</td>
<td><%= role_tag @role.id %></td>
<th>账户:</th>
<td><%= account_tag @role.account %>
</td>

<td><b>Index:</b></td>
<td><%= @role.role_index  || "#" %></td>
</tr>
<tr>
<th>服务器:</th>
<td><%= @role.server || "#" %></td>
<th>等级:</th>
<td><%= @role.level %></td>
<th>疲劳值:</th>
<td><%= @role.vit_power %></td>
</tr>

<tr>
<th>当前金币：</th>
<td><%= @role.gold %></td>
<th>支出合计：</th>
<td><%= link_to(@role.total_pay,payments_path(:role_id => @role.id),:target=>"_blank") %></td>
<th>累计产出:</th>
<td><%= @role.total_gold %></td>
</tr>

<!-- -->

<tr>
<th>状态:</th>
<td colspan="5"><%= @role.status %></td>
</tr>

<tr>
<th>状态:</th>
<td><%= @role.status %></td>
<th>创建时间</th>
<td><%= time_str @role.created_at %></td>
<th>修改时间</th>
<td><%= time_str @role.updated_at %></td>
</tr>

<% if @role.is_started? %>
<tr class="info">
<td>在线:</td>
<td><%= session_id_tag @role.session.id%></td>
<td>计算机:</td>
<td>
<%= computer_tag @role.session.computer %></td>
<td>IP</td>
<td><%= link_to @role.session.ip,notes_path(:ip=>@role.session.ip) %></td>
<%end%>
</tr>
</tbody>
</table>

