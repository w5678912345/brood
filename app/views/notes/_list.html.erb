<div class="alert">
<strong>提示信息:</strong>
<button type="button" class="close" data-dismiss="alert">&times;</button>
<span>共<%= @notes.total_entries%>条记录</span> 
</div>
<table class="table table-bordered table-condensed">
<thead>
	<th>时间</th>
	<th>区</th>
	<th>帐号</th>
	<th>计算机</th>
	<th>角色</th>
	<th>版本</th>
	<th>IP</th>
	<th>事件</th>
	<th>状态</th>
	<th>消息</th>
</thead>
<tbody>
<% @notes.each do |note|%>
<tr title="<%= note.msg %>">
	<td title="<%= note.id%>"><%= time_str note.created_at %></td>
	<th><%= note.server %></th>
	<td><%= link_to note.account,account_path(note.account) unless note.account.blank? %></td>
	<td><%= link_to "#{note.hostname} #{note.computer_id}",computer_path(note.computer_id) if note.computer_id > 0%></td>
	<td title="online_note_id: <%= note.online_note_id %>">
		<%= link_to "#{note.role_id}",role_path(note.role_id) if note.role_id > 0%>
	</td>
	<td><%= note.version %></td>
	<td><%= link_to note.ip,search_notes_path(:ip => note.ip) %></td>
	<th><%= note.api_name  %></th>
	<th><%= note.api_code %></th>
	<th><%= note.msg %></th>
</tr>
<%end%>
</tbody>
</table>

<% if @page_params %>
<%= will_paginate @notes, :params => @page_params %>
<%else%>
<%= will_paginate @notes,inner_window: 1, outer_window: 0  %>
<%end %>
