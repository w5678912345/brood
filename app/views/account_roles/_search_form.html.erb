
<!-- Modal -->

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
<form class="form-search" action="<%= account_roles_path %>" style="margin:0px;padding:0px;">
<div class="modal-header">
<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
<label>搜索数据:</label>
<select name="tag" class="input-small">
<option value="account" <%= 'selected="selected"' if params[:tag] == "account" %>>账号</option>
<option value="role" <%= 'selected="selected"' if params[:tag] == "role" %> >角色</option>
</select>
</div>
<div class="modal-body">


<input type="text" name="no" class="input-small" placeholder="帐号" value="<%= params[:no]%>" />
<input type="text" name="server" class="input-small" placeholder="服务器" value="<%= params[:server]%>" />
<input type="text" name="roles_count" class="input-small" placeholder="角色数量" value="<%= params[:roles_count]%>" />
<input type="text" name="bind_cid" class="input-small" value="<%= params[:bind_cid]%>" placeholder="绑定机器"  title="绑定的机器" />
上线:
<select name="started" class="input-small">
<option value="" >-All-</option>
<option value="1" <%= 'selected="selected"' if params[:started] == "1" %>>Yes</option>
<option value="0" <%= 'selected="selected"' if params[:started] == "0" %> >No</option>
</select>
<input type="text" name="a_created_at" id="a_created_at" value="<%= params[:a_created_at]%>" class="input-small" placeholder="账号注册日期"  />
<hr style="margin:5px 0;">
账号状态:
<% Account::STATUS.keys.each do |status|%>
<label class="checkbox"> <input type="checkbox" name="ass[]" value="<%= status%>" <%= 'checked="checked"' if params[:ass] && params[:ass].include?(status) %> /><%= status%> </label>
<%end%>

<hr style="margin:5px 0;">
<input type="text" name="rid" class="input-small" placeholder="角色ID" value="<%= params[:rid]%>" />
<input type="text" name="index" class="input-small" placeholder="角色Index" value="<%= params[:index]%>" />
<input type="text" name="level" class="input-small" placeholder="等级(n-m)" value="<%= params[:level]%>" />
<input type="text" name="vit" class="input-small" placeholder="疲劳(n-m)" value="<%= params[:vit]%>" />
<input type="text" name="gold" class="input-small" placeholder="金币(n-m)" value="<%= params[:gold]%>" />
<input type="text" name="r_created_at" id="r_created_at" class="input-small" placeholder="创建日期" value="<%= params[:r_created_at]%>" />
<hr style="margin:5px 0;">
<input type="text" name="per_page" class="input-small" placeholder="每页展示" value="<%= params[:per_page] || 20 %>" />
<label class="checkbox">
	<input type="checkbox" value="1" name="all" <%= 'checked="checked"' if params[:all] == "1"%> />ALL
</label>
<button type="submit" class="btn">Search</button>
<hr style="margin:5px 0;">


</div>
  
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button type="submit" class="btn btn-primary">确定搜索</button>
  </div>
</form>
</div>



<script type="text/javascript">
$(function(){
	var today = new Date();
	$("#a_created_at").datepicker({dateFormat:"yy-mm-dd",maxDate:today});
	$("#r_created_at").datepicker({dateFormat:"yy-mm-dd",maxDate:today});
	$("#end_date").datepicker({dateFormat:"yy-mm-dd",maxDate:new Date()});
	$("#date").datepicker({dateFormat:"yy-mm-dd",maxDate:new Date()});
});
</script>

  






