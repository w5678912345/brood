<%= render :partial => "form",:locals=>{:path=>roles_analysis_path(:mark => params[:mark])} %>
<%= render "navbar" %>


<div class="alert">
<strong>提示信息:</strong>
<button type="button" class="close" data-dismiss="alert">&times;</button>
<span>共<%= @roles.total_entries%>个角色</span> 
</div>
<table class="table table-bordered table-condensed">

<thead>
	<th>ID</th>
	<th>角色</th>
	<th>服务器</th>
	<th>等级</th>
	<th>疲劳值</th>
	<th>事件</th>
</thead>

<tbody>
<%@roles.each do |role|%>
<tr>
<td><%= role.id %></td>
<td><%= link_to role.account,notes_role_path(role) %></td>
<td><%= role.server %></td>
<td><%= role.level%></td>
<td><%= role.vit_power %></td>
<td><%notes = role.notes.day_scope(@date).select("api_name,count(id) as ecount").group("api_name") %>
<div class="btn-group">
	<%= link_to "共#{notes.length}个事件发生",notes_role_path(role,:date=>params[:date]),:class=>"btn" %>
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
	<ul class="dropdown-menu">
	<%notes.each do |note|%>
		<li><%= link_to "#{note.api_name}发生了#{note.ecount} 次",notes_role_path(role,:date=>params[:date],:event=>note.api_name)%></li>
	<%end%>
</ul>  
</div>
</td>
</tr>

<%end%>
</tbody>
</table>

<%= will_paginate @roles %>