
<form class="form-search" action="<%= path %>">

<div class="input-prepend input-append">
<span class="add-on"><i class="icon-calendar"></i></span>
<input type="text" name="date" id="date" class="input-medium" placeholder="from" style="width:90px;" value="<%= @date.to_s %>" />
<span class="add-on">06:00:00</span>
<span class="add-on"><i class="icon-arrow-right"></i> <%= @end_time.strftime("%Y-%m-%d %H:%M:%S") %></span>
</div>


<button type="submit" class="btn">Search</button>


</form>

<script type="text/javascript">
$(function(){
	$("#date").datepicker({dateFormat:"yy-mm-dd",maxDate:new Date()});
});
</script>
